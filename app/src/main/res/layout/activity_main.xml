<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    tools:context="com.example.android.booklisting.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            style="@style/CoverImageView"
            android:src="@drawable/cover" />

        <!-- Search topics edit text -->
        <EditText
            android:id="@+id/search_edit_text"
            style="@style/SearchTopicsEditTextStyle"
            android:hint="@string/search_topics_hint" />

        <!-- Search button -->
        <Button
            android:id="@+id/search_button"
            style="@style/SearchButtonStyle"
            android:onClick="checkMyAnswers"
            android:text="@string/search" />
    </LinearLayout>
</ScrollView>